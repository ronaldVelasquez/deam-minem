<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="VarEstiloTitulo">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableStart">@mipmap/ic_launcher</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/varPaddingTitulo</item>
        <item name="android:text">@string/varTitulo</item>
    </style>
    <style name="VarEstiloTitulo.Formulario">
        <item name="android:textSize">@dimen/varDimensionTitulo</item>
        <item name="android:textColor">@color/varColorVerdeTitulo</item>
    </style>
</resources>
